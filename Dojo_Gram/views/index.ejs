<html>
<head>
  <title>DojoGram</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="../stylesheets/style.css">
  <script src="../javascripts/ng-file-upload-shim.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="../javascripts/ng-file-upload.min.js"></script>
  <script src="../javascripts/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="dojoGram">
  <div class="container container-fluid">

  <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
    <ul class="nav navbar-nav">
      <li ng-show="isLoggedIn()"><a href="/#/user/{{currentUserID()}}"><span class="glyphicon glyphicon-user"> {{ currentUser() }}</span></a></li>
      <li><a href="/#/home"><span class="glyphicon glyphicon-home"> Home</span></a></li>
      <li ng-show="isLoggedIn()"><a href="/#/upload/{{currentUserID()}}"><span class="glyphicon glyphicon-save">Upload</span></a></li>
      <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()"><span class="glyphicon glyphicon-log-out"> LogOut</span></a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/login"><span class="glyphicon glyphicon-log-in"> LogIn</span></a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/register"><span class="glyphicon glyphicon-pencil"> Register</span></a></li>
    </ul>
  </nav>
    <div class="page-header">
      <h1><span class="glyphicon glyphicon-camera"></span>DojoGram <span style="font-size: 12px">*in progress.</span></h1>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
    </div>
</div>
</body>
</html>
